package BrowserPackage;

import java.util.Scanner;

class Browser {
		
		private static String[] visitedURLs=new String[10];
		public Browser() {
			
		}
		public Browser(String[] URLs) {
			int j=0;
			for(int i=0;i<visitedURLs.length;i++) {
				if (j==URLs.length) break;
				if(visitedURLs[i]==null){
					visitedURLs[i]=URLs[j];
					j++;
					continue;
						
				}
			}
		}
		public void remove(int n ) {
			for(int k = 0;k<visitedURLs.length;k++) {
				if(k==n)
					visitedURLs[k]=" ";
					break();
			}	
		}
		
		public void display() {
			for(int i=0;i<visitedURLs.length;i++) {
				System.out.println(visitedURLs[i]);
			}
		}

		class his{
		
			public static void main (String[] args) {
				String[] sites= new String[3];
				String[] webs= new String[3];
				Scanner sc=new Scanner(System.in);
				
				for(int i=0;i<sites.length;i++) {
					sites[i]=sc.nextLine();
				}
				for(int i=0;i<webs.length;i++) {
					webs[i]=sc.nextLine();
				}
			
			sc.close();
			Browser mybrow=new Browser(sites);
			Browser my=new Browser(webs);
			char choice='Y';
			do{
			System.out.println("Enter your choice\n 1.Remove Mybrow history\n 2. Remove My history\n 3. Display Mybrow\n 4.Display My");
			int x = sc.nextInt();
			switch(x) {
				case 1:
					System.out.println("Enter the position to remove history");
					int change= sc.nextInt();
					mybrow.remove(change);
					break;
				case 2:
					System.out.println("Enter the position to remove history");
					int change2= sc.nextInt();
					mybrow.remove(change2);
					break;
				case 3:
						mybrow.display();
						break;
				case 4:
						my.display();
						break;
				default:
					System.out.println("Wrong choice");
					break;
			}	
			
			}while(choice=='Y');
			
			
			
		}
	}


}
